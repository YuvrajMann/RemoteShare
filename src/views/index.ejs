<!DOCTYPE html>
<html>

<head>
  <title>Remote Share</title>
  <!-- Material Design and Icons -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="icon" type="image/x-icon" href="/favicon.png">

</head>

<body>
  <div class="header">
    <div class="container" style="display: flex; align-items: center; justify-content: space-between;">
      <div class="logo" style="display: flex; align-items: center;">
        <i class="material-icons">folder_shared</i>
        Remote Share
      </div>
      <div class="header-actions">
        <button id="qr-toggle" class="theme-toggle-btn" title="Show QR Code">
          <i class="material-icons">qr_code</i>
        </button>
        <button id="theme-toggle" class="theme-toggle-btn" title="Toggle Theme">
          <i id="theme-icon" class="material-icons">dark_mode</i>
        </button>
        <button id="settings-toggle" class="theme-toggle-btn" title="Settings">
          <i class="material-icons">settings</i>
        </button>
        <div class="action-divider"></div>
        <button id="logout-btn" class="theme-toggle-btn" title="Logout">
          <i class="material-icons">logout</i>
        </button>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="file-container" id="dropZone">
      <div class="row mb-4">
        <div class="col s6">
          <span id="files-title">Shared Files</span>
        </div>
        <div class="col s6 right-align">
          <button id="upload-btn" onclick="document.getElementById('fileUpload').click()" title="Upload files to share">
            <i class="material-icons">cloud_upload</i>
            <span>Upload File</span>
          </button>
          <input type="file" id="fileUpload" style="display: none" multiple>
        </div>
      </div>
      <div class="drop-message" style="display: none;">
        <i class="material-icons">cloud_upload</i>
        <span>Drop files here to upload</span>
      </div>

      <!-- Move this block ABOVE the files-list -->
      <div id="upload-progress-container">
        <div id="upload-progress" style="display: none;" class="progress-container">
          <div class="progress">
            <div class="determinate" style="width: 0%"></div>
          </div>
          <div class="upload-details">
            <span id="progress-text">0%</span>
            <span id="upload-speed">0 B/s</span>
          </div>
        </div>
      </div>

      <div class="files-list">
        <% if (files && files.length > 0) { %>
        <% files.reverse().forEach(file => { %>
        <div class="file-item" data-file-id="<%= file.id %>">
          <div class="file-info">
            <i class="material-icons file-type-icon" data-filename="<%= file.name %>">insert_drive_file</i>
            <div class="file-details">
              <span class="filename-text"><%= file.name %></span>
              <div class="file-metadata">
                <small><%= file.size %> • Uploaded at <%= file.created %></small>
              </div>
            </div>
          </div>
          <div class="action-buttons">
            <a class="btn-floating waves-effect waves-light blue" onclick="downloadFile(this)" title="Download">
              <i class="material-icons">download</i>
            </a>
            <a class="btn-floating waves-effect waves-light red" onclick="deleteFile(this)" title="Delete">
              <i class="material-icons">delete</i>
            </a>
            <% if (/\.(mp4|webm|ogg|mov|mkv|avi|mp3|wav|m4a|aac|flac|pdf|png|jpg|jpeg|gif|svg|webp|bmp|txt|log|md|json|xml|csv|html|css|js|py|java|c|cpp|h|php|rb|go|rs|ts|sh|bat|yaml|yml|conf|ini|doc|docx|xls|xlsx)$/i.test(file.name)) { %>
            <a class="btn-floating waves-effect waves-light green" title="Preview" onclick="previewMedia('<%= file.id %>', '<%= file.name %>')">
              <i class="material-icons">visibility</i>
            </a>
            <% } %>
          </div>
        </div>
        <% }) %>
        <% } else { %>
        <div class="empty-state">
          <i class="material-icons">folder_open</i>
          <p>No files uploaded yet</p>
        </div>
        <% } %>
      </div>

      <!-- Add after your files-list div -->
      <div class="selection-mode-indicator">
        <span>Selection Mode Active</span>
      </div>

      <div class="bulk-actions">
        <button class="btn-small modern-btn blue lighten-5 blue-text text-darken-2" id="bulk-download">
          <i class="material-icons left">download</i>
        </button>
        <button class="btn-small modern-btn red lighten-5 red-text text-darken-2" id="bulk-delete">
          <i class="material-icons left">delete</i>
        </button>
        <button class="btn-small modern-btn grey lighten-4 grey-text text-darken-3" id="bulk-cancel">
          <i class="material-icons left">close</i>
        </button>
      </div>

      <!-- Progress bar template (hidden) -->
      <template id="progress-bar-template">
        <div class="progress-container" style="margin-top: 10px; display: flex; align-items: center; justify-content: space-between;">
          <div style="flex:1;">
            <div class="progress">
              <div class="determinate" style="width: 0%"></div>
            </div>
            <div class="upload-details">
              <span class="progress-text">0%</span>
              <span class="upload-speed">0 B/s</span>
            </div>
            <span class="filename" style="color: #fff; font-weight: 500; margin-top: 5px; display: block;"></span>
          </div>
          <button class="cancel-upload btn-flat" style="margin-left: 16px; background: transparent; box-shadow: none;">
            <i class="material-icons" style="font-size:20px; color:#e53935;">close</i>
          </button>
        </div>
      </template>
    </div>
  </div>

  <!-- QR Code Modal -->
  <div id="qr-modal" class="modal qr-modal-custom">
    <div class="modal-content">
      <span id="qr-modal-close" class="material-icons modal-close" style="position:absolute;top:12px;right:16px;cursor:pointer;font-size:26px;">close</span>
      <h6 class="qr-modal-title">Quick Setup</h6>
      <p class="qr-modal-desc">Scan this QR code on your other device to open Remote Share:</p>
      <div id="qrcode" class="qr-modal-qrcode"></div>
      <p class="qr-modal-url-label">
        Or enter this address in your browser:<br>
        <span id="qr-url" class="qr-modal-url"></span>
      </p>
    </div>
  </div>

  <!-- Modal for Media Preview -->
  <div id="mediaPreviewModal" class="modal media-modal-modern">
    <div class="modal-content">
      <!-- Header Bar -->
      <div class="media-modal-header">
        <div class="media-modal-title-wrap">
          <i class="material-icons media-type-icon">insert_drive_file</i>
          <span id="mediaTitle" class="media-modal-title">File Preview</span>
        </div>
        <div class="media-modal-actions">
          <button class="media-action-btn" id="downloadOriginalBtn" title="Download" style="display:none;">
            <i class="material-icons">download</i>
          </button>
          <button class="media-action-btn close-btn" onclick="closeMediaPreview()" title="Close">
            <i class="material-icons">close</i>
          </button>
        </div>
      </div>
      <!-- Content -->
      <div class="media-container" id="mediaContainer">
        <!-- Media content will be dynamically inserted here -->
      </div>
    </div>
  </div>

  <!-- Settings Modal -->
  <div id="settings-modal" class="modal settings-modal-custom">
    <div class="modal-content">
      <span id="settings-modal-close" class="material-icons modal-close">close</span>
      <h6 class="settings-modal-title">Settings</h6>
      
      <!-- Current PIN Display -->
      <div class="settings-pin-row">
        <span class="settings-label">Current PIN</span>
        <div class="pin-display-inline">
          <span id="current-pin-value" class="pin-value-inline">••••••</span>
          <button id="toggle-pin-visibility" class="btn-flat pin-eye-btn" title="Show/Hide PIN">
            <i class="material-icons">visibility</i>
          </button>
        </div>
      </div>
      
      <p class="settings-hint">Default: 123456</p>

      <!-- Change PIN Section -->
      <form id="change-pin-form" class="settings-form">
        <div class="settings-input-row">
          <input type="password" id="old-pin" maxlength="6" pattern="[0-9]{6}" placeholder="Current PIN" required>
          <input type="password" id="new-pin" maxlength="6" pattern="[0-9]{6}" placeholder="New PIN" required>
          <input type="password" id="confirm-pin" maxlength="6" pattern="[0-9]{6}" placeholder="Confirm" required>
        </div>
        <button type="submit" class="btn waves-effect waves-light green settings-save-btn">
          <i class="material-icons left">save</i>
          Update PIN
        </button>
      </form>
    </div>
  </div>

  <style>
    /* Settings Modal - Compact Style like QR Modal */
    .settings-modal-custom {
      max-width: 340px !important;
      border-radius: 14px !important;
      box-shadow: 0 4px 24px rgba(0,0,0,0.13) !important;
      background: transparent !important;
      border: none !important;
      padding: 0 !important;
    }

    .settings-modal-custom .modal-content {
      border-radius: 14px !important;
      background: #fff !important;
      color: #222 !important;
      box-shadow: none !important;
      border: none !important;
      text-align: center !important;
      padding: 20px 24px !important;
    }

    .settings-modal-custom .modal-close {
      position: absolute;
      top: 12px;
      right: 16px;
      cursor: pointer;
      font-size: 22px;
      color: #888 !important;
      transition: color 0.2s;
    }

    .settings-modal-custom .modal-close:hover {
      color: #e53935 !important;
    }

    .settings-modal-title {
      margin-bottom: 16px;
      font-weight: 600;
      font-size: 1.15rem;
      color: #1976d2;
    }

    .settings-pin-row {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 12px;
      margin-bottom: 4px;
    }

    .settings-label {
      font-size: 0.9rem;
      color: #666;
      font-weight: 500;
    }

    .pin-display-inline {
      display: flex;
      align-items: center;
      gap: 4px;
      background: #f5f5f5;
      padding: 6px 12px;
      border-radius: 6px;
    }

    .pin-value-inline {
      font-family: 'Courier New', monospace;
      font-size: 18px;
      font-weight: bold;
      letter-spacing: 4px;
      color: #333;
    }

    .pin-eye-btn {
      padding: 0 !important;
      margin: 0 !important;
      min-width: auto !important;
      height: auto !important;
      line-height: 1 !important;
    }

    .pin-eye-btn i {
      font-size: 18px;
      color: #888;
    }

    .settings-hint {
      font-size: 0.8rem;
      color: #999;
      margin: 0 0 16px 0;
    }

    .settings-form {
      margin-top: 8px;
    }

    .settings-input-row {
      display: flex;
      gap: 8px;
      margin-bottom: 12px;
    }

    .settings-input-row input {
      flex: 1;
      height: 36px !important;
      padding: 0 10px !important;
      font-size: 13px !important;
      border: 1px solid #ddd !important;
      border-radius: 6px !important;
      text-align: center;
      box-sizing: border-box !important;
      margin: 0 !important;
    }

    .settings-input-row input:focus {
      border-color: #1976d2 !important;
      box-shadow: 0 0 0 1px #1976d2 !important;
      outline: none;
    }

    .settings-input-row input::placeholder {
      color: #aaa;
      font-size: 11px;
    }

    .settings-save-btn {
      width: 100%;
      height: 40px !important;
      line-height: 40px !important;
      border-radius: 8px !important;
      font-size: 14px;
      font-weight: 600;
    }

    .settings-save-btn i {
      line-height: 40px;
    }

    /* Dark mode for settings modal */
    body.dark-mode .settings-modal-custom .modal-content {
      background: #23272a !important;
      color: #e0e0e0 !important;
    }

    body.dark-mode .settings-modal-title {
      color: #fff !important;
    }

    body.dark-mode .settings-label {
      color: #bbb;
    }

    body.dark-mode .pin-display-inline {
      background: #333;
    }

    body.dark-mode .pin-value-inline {
      color: #fff;
    }

    body.dark-mode .pin-eye-btn i {
      color: #aaa;
    }

    body.dark-mode .settings-hint {
      color: #777;
    }

    body.dark-mode .settings-input-row input {
      background: #333 !important;
      border-color: #444 !important;
      color: #fff !important;
    }

    body.dark-mode .settings-input-row input:focus {
      border-color: #1976d2 !important;
    }

    body.dark-mode .settings-input-row input::placeholder {
      color: #777;
    }

    body.dark-mode .settings-modal-custom .modal-close {
      color: #aaa !important;
    }

    body.dark-mode .settings-modal-custom .modal-close:hover {
      color: #e57373 !important;
    }
  </style>

  <!-- Scripts -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/qrious/4.0.2/qrious.min.js"></script>



  <script src="/js/main.js"></script>
</body>

</html>