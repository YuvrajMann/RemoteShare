{
  "name": "remoteshare",
  "version": "1.0.0",
  "description": "RemoteShare - Easy file sharing across devices",
  "main": "launcher.js",
  "bin": "launcher.js",
  "scripts": {
    "start": "node launcher.js",
    "dev": "nodemon src/app.js --ext js,ejs,css",
    "build": "pkg . --targets node18-win-x64 --output dist/RemoteShare.exe",
    "build:all": "pkg . --targets node18-win-x64,node18-macos-x64,node18-linux-x64 --out-path dist"
  },
  "pkg": {
    "assets": [
      "src/views/**/*",
      "src/public/**/*",
      "src/routes/**/*"
    ],
    "scripts": [
      "src/**/*.js"
    ],
    "outputPath": "dist"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "express": "^4.22.1",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.2",
    "mime-types": "^3.0.1",
    "multer": "^2.0.2",
    "socket.io": "^4.8.3"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "nodemon": "^3.1.10",
    "pkg": "^5.8.1"
  }
}
